                    <td><input type="text" value='<%=entry.mobile%>' id="mobile<%=entry.id%>" name="mobile"></td>
                    <td><input type="text" value='<%=entry.mail%>' id="mail<%=entry.id%>" name="mail"></td>
                    <td><p onclick="save('<%=entry.id%>')">save</p></td>
                </tr>
                <%})%>
               
